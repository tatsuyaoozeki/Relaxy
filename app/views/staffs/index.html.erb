<div class="wrapper">
  <div class="ui-contents">
    <div class="ui-container">
      <h1>スタッフ一覧</h1>
        <% @staffs.each do |staff| %>
        <div class="ui-container-inner">
          <div class="ui-container-content">
            <div>
              <ul class="ui-content">
                <div class="all">
                  <a class="ui-name"><%= staff.user.name %></a>
                  <a class="ui-gender"><%= staff.gender %></a>
                </div>
                <li class="cont_memo">得意な施術や空いてることが多い時間帯など...</li>
                <li class="all ui-cont"><%= staff.content %></li>
                <!-- <li class="all ui-gender"></li> -->
                <div class="ui-link">
                  <li class="ui-menu"><%= link_to 'メニュー一覧へ', menus_path, class: 'btn btn-primary' %></li>
                  <li class="ui-show"><%= link_to '詳細を確認する', staff_path(staff.id), class: 'btn btn-primary' %></li>
                </div>
              </ul>
            </div>
            <div class="ui-link2">
              <% if @staff == current_user.id %>
                <%= link_to '編集', edit_staff_path(staff.id), data: { confirm: '本当に編集していいですか？' } %>
                <%= link_to '削除', staff_path(staff.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container-fluid feed">
  <div class="row flex bg-feed">
    <div class="col-4 text-center">
      <h1>Menus</h1>
      <table>
        <thead>
          <tr>
            <th>メニュー名</th>
            <th>施術時間時間</th>
            <th>価格</th>
            <th>メニュー内容</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <div>
          <%= search_form_for @search do |f| %>
            <%= f.search_field :menu_name_or_menu_content_cont, required: true %>
            <%= f.submit "検索" %>
          <% end %>
        </div>
        <%= render "search_result" %>
        <tbody>
          <% @menus.each do |menu| %>
            <tr>
              <td><%= menu.menu_name %></td>
              <td><%= menu.time_require %></td>
              <td><%= menu.price %></td>
              <td><%= menu.menu_content %></td>
              <td><%= link_to 'Show', menu %></td>
              <% if current_user.id == menu.user.id %>
                <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
                <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>
<br>

<% if current_user.staff == true %>
  <%= link_to 'New Menu', new_menu_path %>
<% end %>

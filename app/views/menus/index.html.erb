<p id="notice"><%= notice %></p>

<h1>Menus</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time require</th>
      <th>Price</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.name %></td>
        <td><%= menu.time_require %></td>
        <td><%= menu.price %></td>
        <td><%= menu.content %></td>
        <td><%= link_to 'Show', menu %></td>
        <% if current_staff.id == menu.staff_id %>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.staff == true %>
  <%= link_to 'New Menu', new_menu_path %>
<% end %>

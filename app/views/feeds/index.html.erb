<div class="wrapper">
  <div class="home-wrapper">
    <div class="home-image">
      <img src="/images/relaxy_home2.jpg" alt="好きな施術師さんと繋がれる">
    </div>
  </div>

  <div class="f-contents">
    <div class="f-container">
      <h1 container-header><%= t('.index_title') %></h1>
      <% @feeds.each do |feed| %>
      <div class="f-container-inner">
        <div class="f-container-content">
          <div>
            <div class="ss-form-groups row mt-1">
              <label class="col-sm-4 col-form-label msl">スタッフ名</label>
              <div class="col-mr-sm-8">
                <%= feed.user.name %>
              </div>
            </div>
            <div class="ss-form-groups row mt-1">
              <label class="col-sm-4 col-form-label msl">タイトル</label>
              <div class="col-mr-sm-8">
                <%= feed.title %>
              </div>
            </div>
            <div class="ss-form-groups row mt-1">
              <label class="col-sm-4 col-form-label msl">内容</label>
              <div class="col-mr-sm-8">
                <%= feed.content %>
              </div>
            </div>
            <div class="ss-form-groups row mt-1">
              <label class="col-sm-4 col-form-label msl">イメージ</label>
              <div class="col-mr-sm-8">
                <%= image_tag(feed.image.url) if feed.image && feed.image.url %>
              </div>
            </div>
            <div class="fs-form-groups mt-1">
              <label class="col-sm-4 col-form-label msl"></label>
              <div class="col-mr-sm-8 f-show">
                <%= link_to '詳細', feed_path(feed.id), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

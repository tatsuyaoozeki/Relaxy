<main class="sign-form-wrap">

<div class="sign-form">
  <h2 class="sign-form__title">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <p class="sign-form_input-wrap"><%= f.email_field :email, placeholder: "メールアドレス", class: "sign-form_input" %>
      <p class="sign-form_input-wrap"><%= f.password_field :password, placeholder: "パスワード", class: "sign-form_input" %></p>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password",  placeholder: "確認用パスワード", class: "sign-form_input" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="sign-form_input-wrap">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
      <p class="sign-form_button-wrap"><%= f.submit "ログイン", class: "sign-form_button" %></p>
      <p class="sign-form_link-wrap"><%= link_to "新規登録はこちらから", new_user_registration_path, class: "sign-form_link" %></p>
      <p class="sign-form_link-wrap"><%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "sign-form_link" %></p><br>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>
</main>
